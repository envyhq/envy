use serde::{Deserialize, Serialize};
use wasm_bindgen::prelude::*;

/**
 * For nv file of...
 *
 * pub var my_first_var: str
 * pub var my_second_var: int
 */

#[derive(Serialize, Deserialize)]
pub struct NVConfig {
    pub my_first_var: String,
    pub my_second_var: String,
}

const MY_FIRST_VAR: &str = "str";
const MY_SECOND_VAR: &str = "str";

#[wasm_bindgen]
pub fn get_config() -> JsValue {
    let config = NVConfig {
        my_first_var: MY_FIRST_VAR.to_owned(),
        my_second_var: MY_SECOND_VAR.to_owned(),
    };

    let _wow_res = wow();

    serde_wasm_bindgen::to_value(&config).unwrap()
}

pub fn wow() -> String {
    "wow".to_owned()
}
